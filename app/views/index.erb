<div class="container">
  <% if @error %>
    <p class="error">Wrong email or password.</p>
  <% end %>
  <h1>Welcome to Flashcards!</h1>
 
  <h2>Sign Up</h2>
    <form id="signup" action="\signup" method="POST">
      <label>Email<input type="text" id="email" name="user[email]"></label><br>
      <label>Name<input type="text" id="name" name="user[name]"></label><br>
      <label>Password<input type="password" id="password" name="user[password]"></label>
      <input type="submit" value="submit">  
    </form>
</div>
